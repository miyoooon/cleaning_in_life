<div class="container">
   <div class="row d-flex justify-content-center">
    <div class="col-4 ms-5 mt-5 text-center">
      <h2 class="border rounded border-info text-info">ユーザー情報詳細</h2>
    </div>
  </div>
  <div class="row mt-5 d-flex justify-content-center">
    <div class="col-4 text-center">
      <p>ユーザーID</p>
    </div>
    <div class="col-4 text-center">
      <%= @user.id %>
    </div>
  </div>
  <div class="row mt-5 d-flex justify-content-center">
    <div class="col-4 text-center">
      <p>ユーザー名</p>
    </div>
    <div class="col-4 text-center">
      <%= @user.name %>
    </div>
  </div>
  <div class="row mt-5 d-flex justify-content-center">
    <div class="col-4 text-center">
      <p>紹介文</p>
    </div>
    <div class="col-4 text-center">
      <%= @user.introduce %>
    </div>
  </div>
  <div class="row mt-5 d-flex justify-content-center">
    <div class="col-4 text-center">
      <p>有効/退会</p>
    </div>
    <div class="col-4 text-center">
      <% if @user.is_deleted == false %>
        <p class="text-success">有効</p>
      <% else %>
        <p class="text-danger">退会済み</p>
      <% end %>
    </div>
  </div>
  <div class="row my-5">
    <div class="col d-flex justify-content-center">
      <%= link_to "編集する", edit_admin_user_path, class: "btn btn-success btn-lg col-2" %>
    </div>
  </div>
</div>