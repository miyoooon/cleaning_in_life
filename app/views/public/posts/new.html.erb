<div class="container">
   <div class="row col-3">
    <div class="col ms-5 mt-5 text-center">
      <h2 class="border rounded border-dark">新規投稿</h2>
    </div>
  </div>
  <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました。
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: @post, url: posts_path do |f| %>
  <div class="row mt-5">
    <div class="col-2">
      <label>タイトル</label>
    </div>
    <div class="col-4">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-2">
      <label>本文</label>
    </div>
    <div class="col-4">
      <%= f.text_area :text, class: "form-control" %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-2">
      <label>タグ</label>
    </div>
    <div class="col-4 text-center">
      <%= f.collection_select :tag_id, Tag.all, :id, :name, include_blank: "タグを選択してください" %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col">
      <%= f.submit "投稿する", class: "btn btn-success btn-lg col-6" %>
    </div>
  </div>
  <% end %>
</div>
