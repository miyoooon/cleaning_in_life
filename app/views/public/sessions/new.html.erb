<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-3 ms-5 mt-5 text-center">
      <h2 class="border rounded border-info text-info">ログイン</h2>
    </div>
  </div>

  <%= form_with model: @user, url: new_user_session_path do |f| %>
  <div class="row mt-5 d-flex justify-content-center">
    <div class="col-3 text-center">
      <label class="col-form-label text-center">メールアドレス</label>
    </div>
    <div class="col-4 text-center">
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row mt-5 d-flex justify-content-center">
    <div class="col-3 text-center">
      <label class="col-form-label">パスワード</label>
    </div>
    <div class="col-4 text-center">
      <%= f.password_field :password, class: "form-control", autofocus: true, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="actions d-flex justify-content-center">
    <%= f.submit "ログイン", class: "btn btn-success btn-lg col-3 mt-5" %>
  </div>
  <% end %>

  <div class="mt-5 row d-flex justify-content-center">
    <h5 class="col-6 text-center">→　<span class="text-danger">新規登録がまだの方</span>は
      <%= link_to "こちら", new_user_registration_path %>
      から新規登録
    </h5>
  </div>

</div>
