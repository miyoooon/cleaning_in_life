<div class="container">
   <div class="row col-3">
    <div class="col ms-5 mt-5 text-center">
      <h2 class="border rounded border-dark">プロフィール編集</h2>
    </div>
  </div>

  <%= form_with model: @user, url: user_path, method: :patch do |f| %>
  <div class="row mt-5">
    <div class="col-2">
      <label>名前</label>
    </div>
    <div class="col-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-2">
      <label>紹介文</label>
    </div>
    <div class="col-4">
      <%= f.text_field :introduce, class: "form-control" %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-5">
      <%= f.submit "変更を保存する", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
  <%= form_with model: @user, url: user_withdraw_path, method: :patch do |f| %>
  <div class="col-4">
    <%= f.submit "退会する", "data-confirm" => "本当に退会しますか？", class: "btn btn-danger btn-lg" %>
  </div>
  </div>
  <% end %>
</div>