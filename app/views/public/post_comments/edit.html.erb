<div class="container">
  <div class="row col-6">
    <div class="col ms-5 mt-5 text-center">
      <h2 class="border rounded border-dark">コメント編集画面</h2>
    </div>
  </div>
  <%= form_with model: [@post, @comment], url: post_post_comment_path, method: :patch do |f| %>
  <div class="row col mt-5">
    <%= @comment.created_at.strftime('%Y/%m/%d') %>
  </div>
  <div class="row col">
    <%= link_to user_path, style: 'color: black;' do %>
      <%= @comment.user.name %>
    <% end %>
    さん:
  </div>
  <div class="row col mt-3">
    <%= f.text_area :comment, rows: '5', cols: '70' %>
  </div>
  <div class="row col mt-3">
    <%= f.submit "更新する", class: "btn btn-success" %>
  </div>
  <% end %>

  <div class="row mt-5">
    <div class="col-5">
      <%= link_to "コメントを削除する", post_post_comment_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
    </div>
    <div class="col-3">
      <%= link_to "戻る", post_path(@post.id), class: "btn btn-primary" %>
    </div>
  </div>
</div>
