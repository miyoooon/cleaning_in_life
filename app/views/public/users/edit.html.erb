<div class="container">
   <div class="row d-flex justify-content-center">
    <div class="col-4 ms-5 mt-5 text-center">
      <h2 class="border rounded border-info text-info">プロフィール編集</h2>
    </div>
  </div>

  <%= form_with model: @user, url: user_path, method: :patch do |f| %>
  <div class="row mt-5 d-flex justify-content-center">
    <div class="col-3 text-center">
      <label>名前</label>
    </div>
    <div class="col-4 text-center">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="row mt-5 d-flex justify-content-center">
    <div class="col-3 text-center">
      <label>紹介文</label>
    </div>
    <div class="col-4 text-center">
      <%= f.text_field :introduce, class: "form-control" %>
    </div>
  </div>
  <div class="row mt-5 d-flex justify-content-center">
    <div class="col-4">
      <%= f.submit "変更を保存する", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
  <%= form_with model: @user, url: user_withdraw_path, method: :patch do |f| %>
  <div class="col-3">
    <%= f.submit "退会する", "data-confirm" => "本当に退会しますか？", class: "btn btn-danger btn-lg" %>
  </div>
  </div>
    <div class="d-flex justify-content-center mt-5">
      <%= link_to "戻る", :back, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <% end %>
</div>