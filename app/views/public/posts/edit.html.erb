<div class="container">
   <div class="row col-3">
    <div class="col ms-5 mt-5 text-center">
      <h2 class="border rounded border-dark">投稿編集</h2>
    </div>
  </div>

  <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
  <div class="row mt-5">
    <div class="col-2">
      <label>タイトル</label>
    </div>
    <div class="col-4">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-2">
      <label>本文</label>
    </div>
    <div class="col-4">
      <%= f.text_field :text, class: "form-control" %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-2">
      <label>タグ</label>
    </div>
    <div class="col-4 text-center">
      <%= f.collection_select :tag_id, Tag.all, :id, :name, include_blank: "選択してください" %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-4">
      <%= f.submit "変更を保存する", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
    <div class="col-5">
      <%= link_to "投稿を削除する", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-lg" %>
    </div>
  </div>
</div>