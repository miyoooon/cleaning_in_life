<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-4 ms-5 mt-5 text-center">
      <h2 class="border-bottom border-info text-info">タグ一覧画面</h2>
    </div>
  </div>

  <div class="row col mt-5 mb-3 border-bottom">
    <div class="col-6 d-flex justify-content-center">
      <p>タグ名</p>
    </div>
  </div>

  <% @tags.each do |tag| %>
  <div class="row col mt-5 mb-3 border-bottom">
    <div class="col-6 d-flex justify-content-center">
      <%= tag.name %>
    </div>
    <div class="col-6 d-flex justify-content-center">
      <%= link_to "編集する", edit_admin_tag_path(tag.id), class: "mb-3 btn btn-success" %>
    </div>
  </div>
  <% end %>
  <div class="row mt-5">
    <div class="col" style="display: flex; justify-content: center;">
      <%= link_to "タグを追加する", new_admin_tag_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>