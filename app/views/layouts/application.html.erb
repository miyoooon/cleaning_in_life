<!DOCTYPE html>
<html>
  <head>
    <title>CleaningInLife</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/ec197d3cc7.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
        <% if user_signed_in? %>
          <div class="row mb-5">
            <div class="col mt-5">
              <ul class="nav">
                <li class="nav-item">
                  <%= link_to root_path, class: "btn btn-outline-dark" do %>
                    <i class="fa-solid fa-broom fa-shake fa-4x"></i>
                  <% end %>
                </li>
              </ul>
            </div>
            <div class="col mt-5">
              <ul class="nav justify-content-end">
                <li class="nav-item">
                  <%= link_to "マイページ", user_path(current_user.id), class: "btn btn-outline-dark" %>
                </li>
                <li class="nav-item">
                  <%= link_to "投稿する", new_post_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="nav-item">
                  <%= link_to "投稿一覧", posts_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-dark" %>
                </li>
              </ul>
            </div>
          </div>
        <% elsif admin_signed_in? %>
          <div class="row mb-5">
            <div class="col mt-5">
              <ul class="nav">
                <li class="nav-item">
                  <%= link_to root_path, class: "btn btn-outline-dark" do %>
                    <i class="fa-solid fa-broom fa-shake fa-4x"></i>
                  <% end %>
                </li>
              </ul>
            </div>
            <div class="col mt-5">
              <ul class="nav justify-content-end">
                <li class="nav-item">
                  <%= link_to "ユーザー一覧", admin_users_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="nav-item">
                  <%= link_to "タグ一覧", admin_tags_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="nav-item">
                  <%= link_to "投稿一覧", posts_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark" %>
                </li>
              </ul>
            </div>
          </div>
        <% end %>

      </div>
    </header>
    <%= yield %>
  </body>
</html>
