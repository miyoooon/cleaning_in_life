<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-3 ms-5 mt-5 text-center">
      <h2 class="border rounded border-info text-info">タグ追加</h2>
    </div>
  </div>

  <%= form_with model: @tag, url: admin_tags_path, method: :post do |f| %>
    <div class="row mt-5 d-flex justify-content-center">
      <div class="col-1">
        <label>タグ名</label>
      </div>
      <div class="col-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col d-flex justify-content-center">
        <%= f.submit "タグを追加する", class: "btn btn-success btn-lg col-2" %>
      </div>
    </div>
  <% end %>
</div>
