<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-5 ms-5 mt-5 text-center">
      <h2 class="border-bottom border-info text-info">ユーザー一覧画面</h2>
    </div>
  </div>

  <div class="mt-5">
    <div class="row my-3 border-bottom">
      <div class="col-4 my-3 text-center">
        <p>ユーザーID</p>
      </div>
      <div class="col-4 my-3 text-center">
        <p>ユーザー名</p>
      </div>
    </div>
  <% @users.each do |user| %>
    <div class="row my-3 border-bottom d-flex justify-content-center">
      <div class="col-4 my-3 text-center">
        <%= user.id %>
      </div>
      <div class="col-4 my-3 text-center">
        <%= link_to admin_user_path(user.id), style: 'color: black;' do %>
          <%= user.name %>
        <% end %>
      </div>
      <div class="col my-3 text-center">
        <%= link_to "マイページへ", user_path(user.id), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <% paginate @users %>
  </div>
</div>
